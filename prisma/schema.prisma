// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Station {
  id        Int          @id @default(autoincrement())
  name      String
  city      String
  country   String
  latitude  Float
  longitude Float
  readings  AirQuality[] // relation: one station -> many readings
  createdAt DateTime     @default(now())
}

model AirQuality {
  id          String    @id @default(uuid())
  // FIX: These new fields are added to match your service and repository code
  pm25        Float
  pm10        Float
  co          Float?  // Using Float? to indicate this field is optional
  no2         Float?  // Using Float? to indicate this field is optional
  o3          Float?  // Added O3 as it was used in your aggregation logic
  
  stationId   Int
  station     Station   @relation(fields: [stationId], references: [id])
  createdAt   DateTime  @default(now())
}

model AuditLog {
  id          String   @id @default(uuid())
  userId      String?  // null if public/system
  action      String
  resource    String
  resourceId  String
  changes     Json
  createdAt   DateTime @default(now())
}