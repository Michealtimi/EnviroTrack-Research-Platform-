// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Station {
  id        Int          @id @default(autoincrement())
  name      String
  city      String
  country   String
  latitude  Float
  longitude Float
  readings  AirQuality[] // relation: one station -> many readings
  createdAt DateTime     @default(now())
}

model AirQuality {
  id          String   @id @default(uuid())
  parameter   String
  value       Float
  unit        String
  recordedAt  DateTime
  stationId   Int
  station     Station  @relation(fields: [stationId], references: [id])
  createdAt   DateTime @default(now())
}

model AuditLog {
  id          String   @id @default(uuid())
  userId      String?  // null if public/system
  action      String
  resource    String
  resourceId  String
  changes     Json
  createdAt   DateTime @default(now())
}
